{
  "name": "ts-react-boilerplate",
  "version": "0.0.2",
  "description": "A very opinionated (React/TypeScript/Redux/etc) frontend boilerplate",
  "main": "dist/index.js",
  "author": "Lapanti",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lapanti/ts-react-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/Lapanti/ts-react-boilerplate/issues"
  },
  "homepage": "https://github.com/Lapanti/ts-react-boilerplate#README.md",
  "jest": {
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__specs__/.*|\\.(spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/jest/setup.js"
  },
  "scripts": {
    "lint:ts": "tslint --project tsconfig.json",
    "lint:ts:fix": "tslint --project tsconfig.json --fix",
    "lint:styles": "stylelint 'src/**/*.tsx'",
    "test": "concurrently --kill-others-on-fail -p \"{name}\" -n \"STYLES-LINT,TS-LINT,JEST\" -c \"bgBlue,bgMagenta,bgCyan\" \"npm run lint:styles\" \"npm run lint:ts\" \"jest\"",
    "test:update": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:ci": "npm run lint:styles && npm run lint:ts && jest --runInBand --forceExit --coverage",
    "clean": "rm -rf dist",
    "start:dev": "npm run clean && webpack-dev-server -d --env=dev --colors --port 9966",
    "build:server": "webpack -d --env=server -p --colors",
    "build:client": "webpack -d --env=prod --colors",
    "build": "npm run clean && concurrently --kill-others-on-fail -p \"{name}\" -n \"SERVER,CLIENT\" -c \"bgBlue,bgMagenta\" \"npm run build:server\" \"npm run build:client\"",
    "start": "cd dist && NODE_ENV=production node server.js",
    "docs:clean": "rm -rf _book",
    "docs:prepare": "gitbook install",
    "docs:watch": "gitbook serve",
    "docs:build": "npm run docs:prepare && gitbook build -g Lapanti/ts-react-boilerplate",
    "docs:publish": "npm run docs:clean && npm run docs:build && cp CNAME _book && cd _book && git init && git commit --allow-empty -m \"Update book\" && git checkout -b gh-pages && touch .nojekyll && git add . && git commit -am \"Update book\" && git push git@github.com:Lapanti/ts-react-boilerplate gh-pages --force"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --single-quote --trailing-comma all --write",
      "git add"
    ]
  },
  "dependencies": {
    "express": "^4.16.2",
    "history": "^4.7.2",
    "http-status-codes": "^1.3.0",
    "moment": "^2.22.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.9",
    "redux": "^3.7.2",
    "redux-observable": "^0.18.0",
    "rxjs": "^5.5.6",
    "styled-components": "^3.2.6",
    "typeface-roboto": "^0.0.54",
    "typesafe-actions": "^2.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@types/enzyme": "^3.1.10",
    "@types/express": "^4.11.0",
    "@types/history": "^4.6.2",
    "@types/jest": "^22.0.1",
    "@types/nock": "^9.1.1",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-redux": "^5.0.19",
    "@types/react-router-dom": "^4.2.6",
    "@types/react-router-redux": "^5.0.11",
    "@types/react-test-renderer": "^16.0.1",
    "awesome-typescript-loader": "^5.0.0",
    "babel-loader": "^8.0.0-beta",
    "concurrently": "^3.5.1",
    "copy-webpack-plugin": "^4.3.1",
    "coveralls": "^3.0.0",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.0",
    "file-loader": "^1.1.11",
    "gitbook-cli": "^2.3.2",
    "gitbook-plugin-advanced-emoji": "^0.2.2",
    "gitbook-plugin-anker-enable": "^0.0.4",
    "gitbook-plugin-edit-link": "^2.0.2",
    "gitbook-plugin-github": "^3.0.0",
    "gitbook-plugin-prism": "^2.3.0",
    "gitbook-plugin-theme-default": "^1.0.7",
    "husky": "^1.0.0-rc.2",
    "jest": "^22.0.5",
    "lint-staged": "^7.0.0",
    "nock": "^9.2.6",
    "prettier": "^1.10.2",
    "react-hot-loader": "^4.0.0",
    "react-test-renderer": "^16.3.2",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "stylelint": "^9.2.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.1",
    "ts-jest": "^22.0.1",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-react": "^3.3.3",
    "typescript": "^2.6.2",
    "webpack": "^4.7.0",
    "webpack-cli": "^2.1.2",
    "webpack-dev-server": "^3.0.0"
  }
}
