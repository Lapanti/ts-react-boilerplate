{
  "name": "ts-react-boilerplate",
  "version": "0.0.2",
  "description": "A very opinionated (React/TypeScript/Redux/etc) frontend boilerplate",
  "main": "dist/index.js",
  "author": "Lapanti",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lapanti/ts-react-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/Lapanti/ts-react-boilerplate/issues"
  },
  "homepage": "https://github.com/Lapanti/ts-react-boilerplate#README.md",
  "jest": {
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__specs__/.*|\\.(spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/jest/setup.js"
  },
  "scripts": {
    "precommit": "lint-staged",
    "prepush": "yarn test",
    "lint:sass": "sass-lint src/**/*.scss -v --max-warnings 1",
    "lint:ts": "tslint --type-check --project tsconfig.json",
    "test": "yarn lint:sass && yarn lint:ts && jest",
    "test:update": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:ci": "yarn lint:sass && yarn lint:ts && jest --runInBand --forceExit --coverage",
    "develop:sass": "mkdir -p dist/styles && node-sass -w -r src/styles -o dist/styles",
    "develop:client": "budo src/index.tsx:js/bundle.js --live --verbose --pushstate -- -p tsify",
    "develop": "NODE_ENV=development concurrently -p \"[{name}]\" -n \"BROWSERIFY,SASS\" -c \"bgBlue,bgMagenta\" -k \"yarn run develop:client\" \"yarn run develop:sass\"",
    "build:server": "mkdir -p dist && browserify src/server.tsx --node -p tsify > dist/server.js",
    "build:sass": "mkdir -p dist/styles && node-sass src/styles/styles.scss dist/styles/styles.css",
    "build:client": "mkdir -p dist/js && browserify src/index.tsx -p tsify > dist/js/bundle.js",
    "build": "yarn build:server && yarn build:sass && yarn build:client",
    "start": "NODE_ENV=production node dist/server.js",
    "docs:clean": "rm -rf _book",
    "docs:prepare": "gitbook install",
    "docs:watch": "gitbook serve",
    "docs:build": "yarn docs:prepare && gitbook build -g Lapanti/ts-react-boilerplate",
    "docs:publish": "yarn docs:clean && yarn docs:build && cp CNAME _book && cd _book && git init && git commit --allow-empty -m \"Update book\" && git checkout -b gh-pages && touch .nojekyll && git add . && git commit -am \"Update book\" && git push git@github.com:Lapanti/ts-react-boilerplate gh-pages --force"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --single-quote --print-width 120 --tab-width 4 --trailing-comma all --write",
      "git add"
    ],
    "*.scss": [
      "prettier --single-quote --print-width 120 --tab-width 4 --write",
      "git add"
    ]
  },
  "dependencies": {
    "express": "^4.15.3",
    "history": "^4.6.1",
    "http-status-enum": "^1.0.2",
    "react": "^15.6.1",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.5",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "next",
    "redux": "^3.6.0",
    "redux-observable": "^0.15.0",
    "rxjs": "^5.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.0.35",
    "@types/history": "^4.5.2",
    "@types/jest": "^21.1.0",
    "@types/nock": "^8.2.1",
    "@types/react": "^16.0.5",
    "@types/react-dom": "^15.5.0",
    "@types/react-redux": "^5.0.5",
    "@types/react-router-dom": "^4.0.4",
    "@types/react-router-redux": "^5.0.2",
    "browserify": "^14.4.0",
    "budo": "^10.0.3",
    "concurrently": "^3.4.0",
    "coveralls": "^3.0.0",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^2.0.0",
    "gitbook-cli": "^2.3.0",
    "gitbook-plugin-advanced-emoji": "^0.2.2",
    "gitbook-plugin-anker-enable": "^0.0.4",
    "gitbook-plugin-edit-link": "^2.0.2",
    "gitbook-plugin-github": "^3.0.0",
    "gitbook-plugin-prism": "^2.2.0",
    "gitbook-plugin-theme-default": "^1.0.6",
    "husky": "^0.14.3",
    "jest": "^21.0.1",
    "lint-staged": "^4.0.1",
    "nock": "^9.0.13",
    "node-sass": "^4.5.3",
    "prettier": "^1.5.2",
    "react-test-renderer": "^16.0.0",
    "sass-lint": "^1.10.2",
    "ts-jest": "^21.0.0",
    "tsify": "^3.0.1",
    "tslint": "^5.4.2",
    "tslint-config-prettier": "^1.1.0",
    "tslint-react": "^3.0.0",
    "typescript": "^2.3.4"
  }
}
