{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "lib": ["dom", "es2016", "es2017"],
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.snap"
  ],
  "awesomeTypescriptLoaderOptions": {
    "babelCore": "@babel/core"
  }
}
